{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "./room_quality.schema.json",
  "type": "object",
  "$properties": {
    "Adjective": {
      "type": "string",
      "description": "The description for the room quality."
    },
    "Value": {
      "type": "integer",
      "description": "The numeric value of the room."
    },
    "Tier": {
      "type": "integer",
      "description": "The numeric value of the room rank."
    },
    "Descriptors": {
      "type": "object",
      "properties": {
        "Quarters": {
          "type": "string"
        },
        "Office": {
          "type": "string"
        },
        "Dining Room": {
          "type": "string"
        },
        "Tomb": {
          "type": "string"
        }
      }
    }
  },
  "required": ["Descriptors", "Value", "Tier"]
}
